{
  "name": "hw20-react-library",
  "version": "1.0.0",
  "description": "A library built using react",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jacobs1986/HW20-React-Library.git"
  },
  "author": "Sean Jacobson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jacobs1986/HW20-React-Library/issues"
  },
  "homepage": "https://github.com/Jacobs1986/HW20-React-Library#readme",
  "dependencies": {
    "express": "^4.17.1",
    "if-env": "^1.0.4"
  }
}
